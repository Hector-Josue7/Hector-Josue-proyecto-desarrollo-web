        .modal-dialog.modal-m
          .modal-content
            // Modal Header
            .modal-header
              h4.modal-title Nuevo Proyecto
              button.close(type='button', data-dismiss='modal') ×
            // Modal body
            .modal-body
              .form-group
                input#Nombre-Proyecto.form-control(type='text', name='Titulo-Proyecto', placeholder='Nombre del proyecto')
              .form-group
                textarea.form-control(name='descripcion', id='', cols='10', rows='5', placeholder='Descripción del proyecto')
            // Modal footer
            .modal-footer
              button#btn-Crea-Proyecto.btn.btn-success(type='button', data-dismiss='modal', onclick='myFunction()') Crear Proyecto
